{
  "name": "decentralization-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "css:build": "tailwindcss -i ./src/index.css -o ./src/output.css",
    "css:watch": "tailwindcss -i ./src/index.css -o ./src/output.css --watch",
    "dev": "bun run css:watch & bun --hot src/index.html",
    "build": "bun run css:build && rm -rf build && bun build src/index.html --outdir build --minify --target browser --define.process.env.NODE_ENV=production",
    "serve": "bun run --production build/index.html",
    "deploy": "bun run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.7.0",
    "lucide-react": "^0.562.0",
    "papaparse": "^5.5.3",
    "react": "^19",
    "react-dom": "^19",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.23",
    "firebase-tools": "^15.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "3",
    "tailwindcss-animate": "^1.0.7"
  }
}
